<script type="text/javascript">
$(function () {
    $('#container').highcharts({
        chart: {
            plotBackgroundColor: null,
            plotBorderWidth: null,
            plotShadow: false,
            type: 'pie'
        },
        title: {
            text: '<%= t('correctly_guessed_nationalities') %>'
        },
        tooltip: {
            pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: true,
                    format: '<b>{point.name}</b>: {point.percentage:.1f} %',
                    style: {
                        color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
                    }
                }
            }
        },
        series: [{
            name: "<%= t('percentage') %>",
            colorByPoint: true,
            data: [{
                name: "<%= t('correctly') %>",
                y: <%= @correctly_guessed %>
            }, {
                name: "<%= t('incorrectly') %>",
                y: <%= @incorrectly_guessed %>
            }]
        }]
    });


    $('#container_continent').highcharts({
        chart: {
            plotBackgroundColor: null,
            plotBorderWidth: null,
            plotShadow: false,
            type: 'pie'
        },
        title: {
            text: '<%= t('correctly_guessed_continents') %>'
        },
        tooltip: {
            pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: true,
                    format: '<b>{point.name}</b>: {point.percentage:.1f} %',
                    style: {
                        color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
                    }
                }
            }
        },
        series: [{
            name: "<%= t :percentage %>",
            colorByPoint: true,
            data: [{
                name: "<%= t('correctly') %>",
                y: <%= @correctly_guessed_continent %>
            }, {
                name: "<%= t('incorrectly') %>",
                y: <%= @incorrectly_guessed_continent %>
            }]
        }]
    });
});
</script>

<div class="page-header">
  <h1>Tolerance <small><%= t('summary') %></small></h1>
</div>

<div class="row">
    <div class="col-lg-6">
        <div id="container" style="min-width: 310px; height: 400px; max-width: 100%; margin: 0 auto; float: left;"></div>
    </div>
    <div class="col-lg-6">
        <div id="container_continent" style="min-width: 310px; height: 400px; max-width: 100%; margin: 0 auto"></div>
    </div>
</div>
