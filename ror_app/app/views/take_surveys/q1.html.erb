<% content_for :title do %>
Survey
<% end %>

<% content_for :subtitle do %>
<%= @survey.title %>
<% end %>

<% sit = @situation %>
<div class="jumbotron">
  <h2><%= sit.title %></h2>
</div>

<%= form_tag(next_wizard_path, method: :put) do %>
  <% q = @question %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= q.text %></h3>
    </div>
    <div class="panel-body">
      <% i = 0 %>
    	<% for a in q.answers %>
  	  	<%= radio_button_tag(:answer, a.id, i == 0) %>
        <%= label_tag('answer_' + a.id.to_s, a.text) %><br>
        <% i = i + 1 %>
  	<% end %>
    </div>
  </div>

  <%= submit_tag("Next step") %>
<% end %>