<script type="text/javascript">
$(function () {
    $('#container').highcharts({
        chart: {
            plotBackgroundColor: null,
            plotBorderWidth: null,
            plotShadow: false,
            type: 'pie'
        },
        title: {
            text: 'Correctly guessed nationalities'
        },
        tooltip: {
            pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: true,
                    format: '<b>{point.name}</b>: {point.percentage:.1f} %',
                    style: {
                        color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
                    }
                }
            }
        },
        series: [{
            name: "Brands",
            colorByPoint: true,
            data: [{
                name: "Correctly",
                y: <%= @correctly_guessed %>
            }, {
                name: "Incorrectly",
                y: <%= @incorrectly_guessed %>
            }]
        }]
    });


    $('#container_continent').highcharts({
        chart: {
            plotBackgroundColor: null,
            plotBorderWidth: null,
            plotShadow: false,
            type: 'pie'
        },
        title: {
            text: 'Correctly guessed continents'
        },
        tooltip: {
            pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: true,
                    format: '<b>{point.name}</b>: {point.percentage:.1f} %',
                    style: {
                        color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
                    }
                }
            }
        },
        series: [{
            name: "Brands",
            colorByPoint: true,
            data: [{
                name: "Correctly",
                y: <%= @correctly_guessed_continent %>
            }, {
                name: "Incorrectly",
                y: <%= @incorrectly_guessed_continent %>
            }]
        }]
    });
});
</script>

<div class="page-header">
  <h1>Survey <small>Summary</small></h1>
</div>

<% if @you_guessed_correctly %>
<div class="alert alert-success" role="alert">
You guessed correctly!
</div>
<% else %>
<div class="alert alert-danger" role="alert">
Your guess (<%= Nationality.find(@your_guess).name %>) was incorrect! The person's true nationality was <b><%= Nationality.find(@true_nationality).name %></b>.
</div>
<% end %>

<div id="container" style="min-width: 310px; height: 400px; max-width: 600px; margin: 0 auto"></div>

<div id="container_continent" style="min-width: 310px; height: 400px; max-width: 600px; margin: 0 auto"></div>
